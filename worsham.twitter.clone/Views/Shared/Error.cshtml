@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_UnAuthenticatedLayout.cshtml";
}

<div class="container d-flex align-items-center justify-content-center" style="height: 90vh;">
    <div class="row">
        <div class="col">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4 d-flex align-items-center ps-5">
                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                            <g><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path></g>
                        </svg>
                    </div>
                    <div class="col-md-8 d-flex align-items-center">
                        <div class="card-body">
                            <h1 class="text-danger">Error.</h1>
                            <h2 class="text-danger">The application has encountered an unknown error.</h2>
                            <h3>Our technical staff have been automatically notified and will be looking into this with the utmost urgency.</h3>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>


