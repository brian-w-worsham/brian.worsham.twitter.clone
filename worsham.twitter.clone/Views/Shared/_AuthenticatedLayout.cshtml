<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - brian.worsham.twitter.clone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="YourProjectName.styles.css" />
    <link rel="stylesheet" href="~/brian.worsham.twitter.clone.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/authenticated.css" asp-append-version="true" />
</head>
<body>
    <header class="float-start mt-5" style="width: 25%;">
        <nav class="nav flex-column float-end fs-5 text-break">
            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
            <a class="nav-link disabled">Explore</a>
            <a class="nav-link disabled">Notifications</a>
            <a class="nav-link disabled">Messages</a>
            <a class="nav-link disabled">Lists</a>
            <a class="nav-link disabled">Bookmarks</a>
            <a class="nav-link disabled">Communities</a>
            <a class="nav-link disabled">Verified</a>
            <a class="nav-link" asp-controller="Users" asp-action="Edit" >Profile</a>
            <a class="nav-link disabled">More</a>
        </nav>
    </header>

    <div class="container-fluid float-start content" style="width: 50%;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <div class="container-fluid float-end" style="width: 25%;">

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
