@model worsham.twitter.clone.Models.ReTweets

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AuthenticatedLayout.cshtml";
}

<h1>Edit</h1>

<h4>ReTweets</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="OriginalTweetId" class="control-label"></label>
                <select asp-for="OriginalTweetId" class="form-control" asp-items="ViewBag.OriginalTweetId"></select>
                <span asp-validation-for="OriginalTweetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReTweetCreationDateTime" class="control-label"></label>
                <input asp-for="ReTweetCreationDateTime" class="form-control" />
                <span asp-validation-for="ReTweetCreationDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RetweeterId" class="control-label"></label>
                <select asp-for="RetweeterId" class="form-control" asp-items="ViewBag.RetweeterId"></select>
                <span asp-validation-for="RetweeterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
